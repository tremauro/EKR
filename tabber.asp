<%@ Language=VBScript %><%specifica = Request.QueryString("spec")if specifica = "" then response.redirect "http://portale.autec.it/specifiche/ConfisSearch.asp"sn = Request.QueryString("sn")lang = Request.QueryString("lang")if lang = "" then lang = "IT"percorso="rawpages\" & lang & "\" & specificaDim objFileSet objFile = Server.CreateObject("Scripting.FileSystemObject")function tf(file)	If objFile.FileExists(Server.MapPath(file)) Then tf = True Else tf = Falseend functionSub includi(file)  Set oFS = objFile.OpenTextFile(Server.MapPath(file)) 'apro il file html  testo = oFS.ReadAll                                  'lo leggo tutto  oFS.Close                                            'e lo chiudo  If Left(testo,5) = "<?xml" Then                      'se è ancora originale come esportato da EKR    testo = Mid(testo, Instr(testo,"<div"), InstrRev(testo,"</div>")+6) 'prendo solo il DIV principale  End If  Response.write testo                                 'scrivo il codice html nella paginaEnd Sub%><?xml version="1.0" encoding="UTF-8"?><!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd"><html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">  <head>    <title>AUTEC RRC DOCUMENTATION</title>    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">    <link rel="stylesheet" type="text/css" href="css/styles.css" media="screen">    <link rel="stylesheet" type="text/css" href="css/styles_EXT.css" media="screen">    <link rel="stylesheet" type="text/css" href="defaultAssets/basicStyles.css" media="screen">    <link rel="stylesheet" type="text/css" href="defaultAssets/basicWebStyles.css" media="screen">    <link rel="stylesheet" type="text/css" href="defaultAssets/customWebStyles.css" media="screen">    <link rel="stylesheet" type="text/css" href="defaultAssets/tabber.css" media="screen">    <link rel="stylesheet" type="text/css" href="defaultAssets/print.cs